@using Models
@using Portfolio.Pages.Components
@using System.ComponentModel.DataAnnotations

@if(WorkExperience is not null){
    <div class="card m-2">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-baseline mb-2">
                <div class="d-flex flex-wrap align-items-baseline">
                    <h5 class="card-title" style="margin-bottom: 0;">
                        @WorkExperience.Title
                    </h5>
                    <div class="text-muted ps-3">@WorkExperience.JobStart.ToString("MMM yyyy") - @(WorkExperience.JobEnd?.ToString("MMM yyyy") ?? "Present") (@WorkExperience.Duration())</div>
                </div>
                <div class="text-muted lh-1">
                    <i class="bi bi-geo-alt-fill"></i>
                    @WorkExperience.Location
                </div>
            </div>
            <div class="card-subtitle text-muted lh-1">
                @if(WorkExperience.EmployerSite is not null){
                    <a style="width: fit-content;" href=@WorkExperience.EmployerSite>@WorkExperience.Company</a>
                }else{
                    <div>@WorkExperience.Company</div>
                }
            </div>
            
            <p class="card-text m-1">@WorkExperience.Description</p>
            @foreach(string skill in WorkExperience.Skills){
                <SkillComponent Skill="@skill" />
            }
        </div>
    </div>
}

@code{
    [Parameter][Required]
    public Experience? WorkExperience {get; set;}
}