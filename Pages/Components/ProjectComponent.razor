@using Models
@using System.ComponentModel.DataAnnotations
@* Singular project *@

@if(Project is not null){
    <div class="card m-2" style="width: 300px;">
        <div class="card-body">
            <a href=@Project.Link>
                <h5 class="card-title lh-1">@Project.Title</h5>
            </a>
            <div card="card-subtitle lh-1 text-muted">@Project.Completed.ToString("MMM d yyyy")</div>
            @* TechStack *@
            <p class="card-text m-1">@Project.Description</p>
                @foreach(string tech in Project.TechStack){
                    <SkillComponent Skill="@tech" />
                }
        </div>
    </div>
}

@code{
    [Parameter][Required]
    public Project? Project {get; set;}
}