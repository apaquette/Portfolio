@using Models
@using Portfolio.Pages.Components
@using System.Text.Json

<SectionComponent Title="Education" Id="education">
     @foreach(Degree degree in Degrees){
            <EducationComponent Degree="@degree" />
        }
</SectionComponent>

@code{
    private SortedSet<Degree> Degrees = new();
    [Inject]
    private HttpClient? Http { get; set; }
    protected override async Task OnInitializedAsync(){
        string data = Http is not null ? await Http.GetStringAsync("data/degrees.json") : "";
        Degrees = JsonSerializer.Deserialize<SortedSet<Degree>>(data, new JsonSerializerOptions() { PropertyNameCaseInsensitive = true }) ?? new();
    }
}