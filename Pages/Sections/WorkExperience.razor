@using Models
@using Portfolio.Pages.Components

<div class="p-3 m-3 section bg-light border rounded">
    <h3 class="fw-bold"><i class="bi bi-briefcase-fill" /> Work History</h3>
    <div>
        @foreach(Experience job in WorkExperiences){
            <WorkExperienceComponent WorkExperience=@job />
        }
    </div>
</div>

