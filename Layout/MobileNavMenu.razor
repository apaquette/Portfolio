<div class="dropdown">
    <a data-bs-toggle="dropdown" aria-expanded="false">
        <h2 class="m-4">
            <i class="bi bi-list" />
        </h2>
    </a>
    <nav id="navbar" class="dropdown-menu" style="background-color: white;">
        <ul class="d-flex flex-column align-items-center nav nav-pills">
            @foreach(string link in links){
                <li class="nav-item">
                    <a class="nav-link" href="#@link.ToLower()">@link</a>
                </li>
            }
        </ul>
    </nav>
</div>

@code{
    private string[] links = ["Home", "About", "Projects", "Work", "Clients", "Skills"];
}