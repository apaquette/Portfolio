@inherits LayoutComponentBase
@inject IJSRuntime JS

<div class="page">
    <main>
        <Header />
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("getHeaderIds");
        }
    }
}