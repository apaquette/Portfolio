@if(Item is not null){
    <div class="card m-2">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-baseline mb-2">
                <div class="d-flex flex-wrap align-items-baseline">
                    <h5 class="card-title pe-3" style="margin-bottom: 0;">
                        @Item.Title
                    </h5>
                    <div class="mt-1 text-muted pe-1">@Item.JobStart.ToString("MMM yyyy") - @(Item.JobEnd?.ToString("MMM yyyy") ?? "Present")</div>
                    <div class="text-muted ">(@Item.Duration())</div>
                </div>
                <div class="text-muted text-end">
                    <i class="bi bi-geo-alt-fill"></i>
                    @Item.Location
                </div>
            </div>
            <div class="card-subtitle text-muted lh-1 pt-1">
                @if(Item.EmployerSite is not null){
                    <a style="width: fit-content;" href=@Item.EmployerSite>
                        @Item.Company
                        <i class="bi bi-box-arrow-up-right ps-2" />
                    </a>
                }else{
                    <div>@Item.Company</div>
                }
            </div>
            
            <p class="card-text m-1">@Item.Description</p>
            @foreach(string skill in Item.Skills){
                <SkillComponent Skill="@skill" />
            }
        </div>
    </div>
}