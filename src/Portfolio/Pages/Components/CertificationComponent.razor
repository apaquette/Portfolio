@if(Certification is not null){
    string? link = Certification.Link;
    <div class="card m-2 scale" style="width: 300px;">
        <div class="card-body">
            <div class="d-flex justify-content-between">
                @if(link is null){
                    <h5 class="card-title" style="margin-bottom: 0;">@Certification.Name</h5>
                }else{
                    <a href=@Certification.Link class="stretched-link card-link">
                        <h5 class="card-title" style="margin-bottom: 0;">@Certification.Name</h5>
                    </a>
                    <i class="bi bi-box-arrow-up-right ps-2" />
                }
            </div>
            <div class="card-subtitle" style="font-style: italic;">@Certification.EarnedOn.ToString("MMM d yyyy")</div>
            <img style="padding: 10%" src=@Certification.Icon class="card-img-bottom" />
        </div>
    </div>
}