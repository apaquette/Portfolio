@if(Item is not null){
    string? link = Item.Link;
    <div class="card m-2 scale" style="width: 300px;">
        <div class="card-body">
            <div class="d-flex justify-content-between">
                @if(link is null){
                    <h5 class="card-title" style="margin-bottom: 0;">@Item.Title</h5>
                }else{
                    <a href=@Item.Link class="stretched-link card-link">
                        <h5 class="card-title" style="margin-bottom: 0;">@Item.Title</h5>
                    </a>
                    <i class="bi bi-box-arrow-up-right ps-2" />
                }
            </div>
            <div class="card-subtitle" style="font-style: italic;">@Item.Completed.ToString("MMM d yyyy")</div>
            @* TechStack *@
            <p class="card-text m-1">@Item.Description</p>
                @foreach(string tech in Item.TechStack){
                    <SkillComponent Skill="@tech" />
                }
        </div>
    </div>
}